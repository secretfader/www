---
import profile from "../assets/profile.jpg";
import youtube from "../assets/youtube.svg";
import Videos from "./Videos.astro";
---

<div class="max-w-4xl mx-auto">
    <img class="mx-auto mb-12 max-w-80 rounded-full" src={profile.src} />
    <h1 class="text-5xl font-bold inline pr-2">nicholas young</h1>
    <h2 class="text-5xl font-bold text-zinc-500 inline">
        is a storyteller, educator, and creative hacker from denver, colorado.
    </h2>
    <ul class="mt-12 mb-4 flex flex-row justify-around">
        <li>
            <a href="https://youtube.com/@secretfader">
                <img class="w-12" src={youtube.src} />
            </a>
        </li>
    </ul>
    <Videos />
</div>
