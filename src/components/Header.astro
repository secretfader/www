---
interface Props {
    title: string;
    subtitle?: string;
    description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<div class="container mx-auto px-6 my-4 lg:my-8 lg:px-0">
    {
        subtitle && subtitle !== "" ? (
            <h1 class="inline text-gray-400 dark:text-gray-300 font-bold text-4xl lg:text-7xl xl:text-8xl">
                {subtitle}
            </h1>
        ) : undefined
    }
    <h1
        class="text-gray-500 dark:text-gray-400 font-bold text-4xl lg:text-7xl xl:text-8xl"
    >
        {title}
    </h1>
    {
        description ? (
            <div class="text-xl lg:text-3xl mt-8 dark:text-gray-400 lg:mt-12">
                <span>{description}</span>
            </div>
        ) : undefined
    }
</div>
