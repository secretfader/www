---
import Layout from "../components/Layout.astro";
import Nav from "../components/Nav.astro";
import Container from "../components/Container.astro";
import Contact from "../components/Contact.astro";
import Gallery from "../components/Gallery.astro";
import hifi from "../assets/hifi.jpg";
import { Image } from "astro:assets";

const links = [
    {
        title: "Double-Amputee Cyclist Finds a New Way to Ride",
        source: "FOX 31 Denver, Colorado",
        href: "https://kdvr.com/news/outdoor-colorado/outdoor-colorado-double-amputee-bicyclist-finds-a-new-way-to-ride/",
        pubDate: "2023-05-25",
    },
    {
        title: "After Two Amputations, This Cyclist Started a Club for Athletes Like Him",
        source: "Bicycling Magazine",
        href: "https://www.bicycling.com/culture/a42555000/how-cycling-changed-me-nicholas-young/",
        pubDate: "2023-01-20",
    },
];
---

<Layout title="Contact">
    <Nav />
    <div class="container mx-auto px-6 my-8 lg:my-12 lg:px-0">
        <h1
            class="text-gray-500 dark:text-gray-400 font-bold text-4xl lg:text-7xl xl:text-8xl"
        >
            Contact
        </h1>
        <div
            class="text-xl lg:text-2xl mt-8 max-w-7xl dark:text-gray-300 lg:mt-12"
        >
            <span>
                Use the form below for ideas, business proposals, and review
                requests.
            </span>
        </div>
    </div>
    <Container
        classes={["grid", "grid-cols-1", "lg:grid-cols-12", "lg:gap-12"]}
    >
        <div class="col-span-1 mb-12 lg:col-span-8 lg:mb-0">
            <Contact />
        </div>
        <div class="col-span-1 lg:col-span-4 text-gray-700 dark:text-gray-300">
            <div class="mt-8">
                <span
                    class="font-semibold uppercase underline underline-offset-8"
                    >Standard Mail (Not Digital)</span
                >
                <div class="mt-4">9878 W Belleview Ave #5015</div><div>
                    Denver, CO 80123
                </div>
                <div class="mt-4 text-sm uppercase">
                    All major package carriers accepted
                </div>
            </div>
        </div>
    </Container>
    <Gallery
        classes={[
            "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-12 lg:mt-16",
        ]}
    />
</Layout>
